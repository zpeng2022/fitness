<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yiie.common.mapper.GymOpenTimeMapper">
    <resultMap id="BaseResultMap" type="com.yiie.entity.GymOpenTime">
        <id column="openTimeId" jdbcType="VARCHAR" property="openTimeId" />
        <result column="gymId" jdbcType="VARCHAR" property="gymId" />
        <result column="deptId" jdbcType="VARCHAR" property="deptId" />
        <result column="whichDay" jdbcType="INTEGER" property="whichDay" />
        <result column="openTime" jdbcType="VARCHAR" property="openTime" />
        <result column="closeTime" jdbcType="VARCHAR" property="closeTime" />
        <result column="deleted" jdbcType="TINYINT" property="deleted" />
    </resultMap>

    <sql id="Base_Column_List">
        gymId, deptId, currentCount, historyCount, currentDate, deleted
    </sql>

    <select id="getAllGymOpenTimeByNameByDeptID" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"></include>
        FROM gym_opentime
        AND deptId=#{deptId}
        AND deleted=1
    </select>

    <select id="selectByPrimaryKey" parameterType="java.lang.String" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from gym_opentime
        where openTimeId = #{openTimeId,jdbcType=VARCHAR}
    </select>

    <select id="getGymCT" resultType="com.yiie.vo.data.GymCloseTime">
        SELECT DISTINCT gymId,whichDay,closeTime
        FROM gym_opentime
        WHERE deleted=1 and whichDay>=#{fiveDaysAgo} and #{today}>=whichDay and gymId=#{gymId}
        ORDER BY whichDay DESC
    </select>

    <insert id="insertSelective" parameterType="com.yiie.entity.GymOpenTime">
        insert into gym_opentime
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="openTimeId != null">
                openTimeId,
            </if>
            <if test="gymId != null">
                gymId,
            </if>
            <if test="deptId != null">
                deptId,
            </if>
            <if test="whichDay != null">
                whichDay,
            </if>
            <if test="openTime != null">
                openTime,
            </if>
            <if test="closeTime != null">
                closeTime,
            </if>
            <if test="deleted != null">
                deleted,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="openTimeId != null">
                #{openTimeId,jdbcType=VARCHAR},
            </if>
            <if test="gymId != null">
                #{gymId,jdbcType=VARCHAR},
            </if>
            <if test="deptId != null">
                #{deptId,jdbcType=VARCHAR},
            </if>
            <if test="whichDay != null">
                #{whichDay,jdbcType=INTEGER},
            </if>
            <if test="openTime != null">
                #{openTime,jdbcType=VARCHAR},
            </if>
            <if test="closeTime != null">
                #{closeTime,jdbcType=VARCHAR},
            </if>
            <if test="deleted != null">
                #{deleted,jdbcType=TINYINT},
            </if>
        </trim>
    </insert>

    <update id="updateByPrimaryKeySelective" parameterType="com.yiie.entity.GymOpenTime">
        update gym_opentime
        <set>
            <if test="openTimeId != null">
                openTimeId = #{openTimeId,jdbcType=VARCHAR},
            </if>
            <if test="gymId != null">
                gymId = #{gymId,jdbcType=VARCHAR},
            </if>
            <if test="deptId != null">
                deptId = #{deptId,jdbcType=VARCHAR},
            </if>
            <if test="whichDay != null">
                whichDay = #{whichDay,jdbcType=INTEGER},
            </if>
            <if test="openTime != null">
                openTime = #{openTime,jdbcType=VARCHAR},
            </if>
            <if test="closeTime != null">
                closeTime = #{closeTime,jdbcType=VARCHAR},
            </if>
            <if test="deleted != null">
                deleted = #{deleted,jdbcType=TINYINT},
            </if>
        </set>
        where openTimeId = #{openTimeId,jdbcType=VARCHAR}
    </update>

    <update id="deletedGymOpenTime" parameterType="com.yiie.entity.GymOpenTime">
        update gym_opentime
        <set>
            deleted = 0
        </set>
        where openTimeId in
        <foreach collection="list" open="(" close=")" separator="," item="item">
            #{item}
        </foreach>
    </update>
</mapper>